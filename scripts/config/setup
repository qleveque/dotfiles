#!/usr/bin/zsh
configDir="${0:h}"

# dotfiles
python3 "${configDir}/dotfiles/lesskey.py" > ~/.lesskey
ln -f "${configDir}/dotfiles/.gitconfig" "${HOME}/"
echo run \"${HOME}/.tmuxrc\" > ~/.tmux.conf
mkdir -p "${HOME}/.config/vifm"
echo source "${HOME}/.vifmrc" > "${HOME}/.config/vifm/vifmrc"

if grep -q Microsoft /proc/version; then
  appData="${HOME}/AppData/Roaming"
  shellStartup="${appData}/Microsoft/Windows/Start Menu/Programs/Startup"
  # VSCode
  codeDir="${appData}/Code/User"
  if [[ -d ${codeDir} ]]; then
    ln -f "${configDir}/VSCode/settings.json" "${codeDir}/settings.json"
    ln -f "${configDir}/VSCode/keybindings.json" "${codeDir}/keybindings.json"
  fi
  # JetBrains
  ln -f "${configDir}/JetBrains/.ideavimrc" "${HOME}/_ideavimrc"
  for dirPattern in 'PyCharm*' 'IdeaIC*'; do
    dir=$(find "${appData}/JetBrains" -type d -name $dirPattern|sort -n|tail -n1)
    if [[ -d ${dir} ]]; then
      mkdir -p "${dir}/keymaps"
      ln -f "${configDir}/JetBrains/keybindings.xml" "${dir}/keymaps/keybindings.xml"
    fi
  done
  # komorebi
  echo komorebic.exe start --whkd > "${shellStartup}/start_komorebic.bat"
  ln -f "${configDir}/WSL/komorebi.json" "${HOME}/komorebi.json"
  ln -f "${configDir}/WSL/whkdrc" "${HOME}/.config/whkdrc"
  # Windows Terminal
  packages="${HOME}/AppData/Local/Packages"
  win_term_dir=`ls ${packages} | grep 'WindowsTerminal'`
  win_term_settings="${packages}/${win_term_dir}/LocalState/settings.json"
  ln -f "${configDir}/WSL/windowsTerminal.json" ${win_term_settings}
fi
