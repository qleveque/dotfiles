{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.24/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Minimize",
  "cross_monitor_move_behaviour": "Insert",
  "unmanaged_window_operation_behaviour": "NoOp",
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "mouse_follows_focus": true,
  "window_container_behaviour": "Append",
  "border_width": 4,
  "stackbar": {
    "height": 15,
    "mode": "OnStack",
    "tabs": {
      "width": 150,
      "focused_text": "#ffffff",
      "unfocused_text": "#666666",
      "background": "#141414"
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "any",
          "layout": "BSP"
        },
        {
          "name": "else",
          "layout": "BSP"
        },
        {
          "name": "rest",
          "layout": "BSP"
        },
        {
          "name": "term",
          "layout": "BSP"
        },
        {
          "name": "web",
          "layout": "BSP"
        },
        {
          "name": "msg",
          "layout": "BSP"
        },
        {
          "name": "code",
          "layout": "BSP"
        }
      ]
    }
  ]
}
