set -g window-active-style bg="$PALETTE_1"
set -g window-status-current-style fg=white,bg="$PALETTE_4"
set -g window-status-style fg="$PALETTE_4",bg="$PALETTE_2"
set -g window-style bg="$PALETTE_2"
