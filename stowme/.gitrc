# vim: set ft=gitconfig:
# [include]
#   path = ~/dotfiles/stowme/.gitrc
[user]
  email = qleveque@hotmail.com
  name = Quentin Leveque
[core]
  editor = nvim
  ignorecase = true
[diff]
  tool = vimdiff3
[push]
  autoSetupRemote = true
[pull]
  rebase = true
[merge]
  tool = vimdiff3
  conflictstyle = diff3
[difftool "vimdiff3"]
  path = nvim
[mergetool "vimdiff3"]
  path = nvim
  keepBackup = false
