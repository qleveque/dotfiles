" vim: set ft=vim:
set vicmd=$EDITOR syscalls trash history=100 nofollowlinks sortnumbers undolevels=100 novimhelp norunexec timefmt=%m/%d\ %H:%M wildmenu wildstyle=popup suggestoptions=normal,visual,view,otherpane,keys,marks,registers ignorecase smartcase nohlsearch incsearch scrolloff=4 vifminfo=dhistory,savedirs,chistory,state,tui,shistory,phistory,fhistory,dirstack,registers,bookmarks,bmarks statusline=" " syncregs=general

" Shortcuts
map <C-i> :histnext<CR>
map <C-q> :quit<CR>
nnoremap <CR> :!o "%f"<CR>
nnoremap A cw
nnoremap I cw<c-a>
nnoremap V ggvG
nnoremap cw cw<c-u>
nnoremap s :sort<CR>
nnoremap yW :execute '!echo -n %c:p | xclip -i -sel p -f | xclip -i -sel c'<CR>
nnoremap yp :execute '!echo -n %d | xclip -i -sel p -f | xclip -i -sel c'<CR>
nnoremap yw :execute '!echo -n %c | xclip -i -sel p -f | xclip -i -sel c'<CR>

" FZF
nnoremap <M-c> :execute 'cd "./'.system('eval $FZF_ALT_C_COMMAND | fzf 2>/dev/tty').'"' | :redraw<CR>
nnoremap <C-t> :execute 'mark x '.system('a=$(eval $FZF_CTRL_T_COMMAND | fzf 2>/dev/tty) && echo \"%d/$a:h\" \"$a:t\"') | :redraw | :normal 'x<CR>
nnoremap <M-p> :execute 'cd "'.system('eval $FZF_P_COMMAND | fzf --exact 2>/dev/tty').'"' | :redraw<CR>
nnoremap <C-p> :execute 'mark x '.system('a=$(eval $FZF_P_COMMAND | fzf --exact 2>/dev/tty) && echo \"$a:h\" \"$a:t\"') | :redraw | :normal 'x<CR>

" Tmux integration
nnoremap <C-b>s :!tmux split-window -v -c %d<CR>
nnoremap <C-b>v :!tmux split-window -h -c %d<CR>

" Commands
command! g :execute 'cd "'.system('set %a && readlink "$MARKPATH/$1"').'"'
command! o :!o "%a"

" Style
highlight Win cterm=none ctermfg=none ctermbg=none
highlight Executable cterm=none ctermfg=none ctermbg=none
highlight StatusLine cterm=none ctermfg=none ctermbg=none
highlight CmdLine cterm=none ctermfg=none ctermbg=none
highlight TopLine cterm=none ctermfg=none ctermbg=none
highlight TopLineSel cterm=none ctermfg=none ctermbg=none
highlight ErrorMsg cterm=none ctermfg=red ctermbg=none
highlight Border cterm=none ctermfg=black ctermbg=none
highlight Directory cterm=bold ctermfg=green ctermbg=none
highlight Fifo cterm=bold ctermfg=green ctermbg=none

set classify=' :dir:/, :exe:, :reg:, :link:,? :?:, ::../::'
set classify+=' ::.gitconfig,,.gitignore,,.profile,,.zprofile,,.yarnrc,,.tmux.conf,,.config,,.ini,,config::'
set classify+=' ::license,,copyright,,copying,,LICENSE,,COPYRIGHT,,COPYING::'
set classify+=' ::*.json::'
set classify+=' ::*.bmp,,*.gif,,*.ico,,*.jpeg,,*.jpg,,*.png,,*.svg::'
set classify+=' ::*.fish,,*.sh,,*.bash,,*.zsh::'
set classify+=' ::*.m2a,,*.m4a,,*.mid,,*.midi,,*.mp3,,*.wav,,*.wma::'
set classify+=' ::*.avi,,*.flv,,*.mkv,,*.mov,,*.mp4,,*.mpeg,,*.mpg,,*.webm::'
