{
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "workbench.colorTheme": "Default Dark+",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.formatOnPaste": true,
  "extensions.ignoreRecommendations": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "editor.inlineSuggest.enabled": true,
  "git.untrackedChanges": "hidden",
  "C_Cpp.updateChannel": "Insiders",
  "C_Cpp.clang_format_sortIncludes": true,
  "python.linting.flake8Enabled": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/dotfiles/stowme/.vimrc",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    { "before": [ "<C-e>" ], "commands": [ "editor.emmet.action.expandAbbreviation" ] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": [ "<C-e>" ], "commands": [ "editor.emmet.action.wrapWithAbbreviation" ] },
    { "before": [ "<leader>", "f" ], "commands": [ "editor.action.formatSelection" ] }
  ],
  "vim.normalModeKeyBindings": [
    { "before": [ "<C-l>" ], "commands": [ "workbench.action.focusRightGroup" ] },
    { "before": [ "<C-h>" ], "commands": [ "workbench.action.focusLeftGroup" ] },
    { "before": [ "<C-k>" ], "commands": [ "workbench.action.focusAboveGroup" ] },
    { "before": [ "<C-j>" ], "commands": [ "workbench.action.focusBelowGroup" ] },

    { "before": [ "<C-t>" ], "commands": [ "workbench.action.quickOpen" ] },
    { "before": [ "<C-f>" ], "commands": [ "workbench.view.explorer" ] },
    { "before": [ "<C-n>" ], "commands": [ "workbench.action.showAllSymbols" ] },
    { "before": [ "<C-p>" ], "commands": [ "workbench.action.openRecent" ] },
    { "before": [ "<C-q>" ], "commands": [ "workbench.action.closeEditorsInGroup" ] },

    { "before": [ "<leader>", "b" ], "commands": [ "gitlens.toggleFileBlame" ] },
    { "before": [ "<leader>", "d" ], "commands": [ "git.openChange" ] },
    { "before": [ "<leader>", "D" ], "commands": [ "workbench.scm.focus" ] },
    { "before": [ "<leader>", "l" ], "commands": [ "gitlens.openFileHistory" ] },
    { "before": [ "<leader>", "L" ], "commands": [ "gitlens.showCommitsView" ] },

    { "before": [ "é" ], "commands": [ "workbench.action.tasks.build" ] },
    { "before": [ "è" ], "commands": [ "workbench.action.debug.start" ] },
    { "before": [ "È" ], "commands": [ "workbench.action.debug.selectandstart" ] },

    { "before": [ ")" ], "commands": [ "workbench.action.nextEditor" ] },
    { "before": [ "(" ], "commands": [ "workbench.action.previousEditor" ] },
    { "before": [ "°" ], "commands": [ "workbench.action.moveEditorRightInGroup" ] },
    { "before": [ " " ], "commands": [ "workbench.action.moveEditorLeftInGroup" ] },
    { "before": [ "_" ], "commands": [ "workbench.action.closeActiveEditor" ] },

    { "before": [ "+" ], "commands": [ "search.action.focusNextSearchResult" ] },
    { "before": [ "-" ], "commands": [ "search.action.focusPreviousSearchResult" ] },

    { "before": [ "g", "%" ], "commands": [ "editor.emmet.action.matchTag" ] },
    { "before": [ "<leader>", "i" ], "commands": [ "editor.action.organizeImports" ] },
    { "before": [ "<leader>", "r" ], "commands": [ "editor.action.rename" ] },
    { "before": [ "<leader>", "t" ], "commands": [ "breadcrumbs.focusAndSelect" ] },
    { "before": [ "<leader>", "f" ], "commands": [ "eslint.executeAutofix" ] },
    { "before": [ "g", "r" ], "after": [ "g", "d" ] },

    { "before": [ "ℝ" ], "commands": [ "workbench.action.debug.continue" ] },
    { "before": [ "Ⅰ" ], "commands": [ "workbench.action.debug.stepInto" ] },
    { "before": [ "œ" ], "commands": [ "workbench.action.debug.stepOut" ] },
    { "before": [ "€" ], "commands": [ "workbench.action.debug.stepOver" ] },
    { "before": [ "ß" ], "commands": [ "editor.debug.action.toggleBreakpoint" ] },
    { "before": [ "©" ], "commands": [ "editor.debug.action.runToCursor" ] },
    { "before": [ "×" ], "commands": [ "workbench.action.debug.stop" ] },
    { "before": [ "ω" ], "commands": [ "workbench.debug.viewlet.action.addWatchExpression" ] },
    { "before": [ "…" ], "commands": [ "workbench.debug.viewlet.action.toggleBreakpointsActivatedAction" ] }
  ],
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "gitlens.plusFeatures.enabled": false,
  "git.showCommitInput": false
}
