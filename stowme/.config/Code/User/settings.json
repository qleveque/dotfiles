{
  "C_Cpp.clang_format_sortIncludes": true,
  "C_Cpp.updateChannel": "Insiders",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingQuotes": "never",
  "editor.cursorSurroundingLines": 4,
  "editor.formatOnPaste": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "extensions.ignoreRecommendations": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "notebook.cellToolbarLocation": { "default": "right", "jupyter-notebook": "left" },
  "python.linting.flake8Enabled": true,
  "vim-commentary": true,
  "vim-textobj-arguments": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/dotfiles/stowme/.vimrc",
  "workbench.colorTheme": "Default Dark+",
  "workbench.editorAssociations": { "*.ipynb": "jupyter-notebook" },
  "workbench.statusBar.visible": true,
  "vim.insertModeKeyBindings": [
    { "before": [ "<C-e>" ], "commands": [ "editor.emmet.action.expandAbbreviation" ] },
  ],
  "vim.visualModeKeyBindings": [
    { "before": [ "<C-e>" ], "commands": [ "editor.emmet.action.wrapWithAbbreviation" ] },
    { "before": [ "<leader>", "f" ], "commands": [ "editor.action.formatSelection" ] },
    { "before": [ "*" ], "after": [ "\"", "x", "y", "/", "<C-R>", "x", "<CR>" ] },
    { "before": [ "ç" ], "after": [ "\"", "x", "y", "/", "<C-R>", "x", "<CR>", "N", "c", "g", "n" ] },
    { "before": [ " ", "w" ], "commands": [ "editor.debug.action.selectionToWatch" ] },
    { "before": [ "_" ], "after": [ "a", "f" ] },
  ],
  "vim.normalModeKeyBindings": [
    // New
    { "before": [ "<leader>", "i" ], "commands": [ "editor.action.organizeImports" ] },
    { "before": [ "<leader>", "r" ], "commands": [ "editor.action.rename" ] },
    { "before": [ "<Tab>" ], "commands": [ "breadcrumbs.focusAndSelect" ] },

    // Adaptations
    { "before": [ "é" ], "commands": [ "workbench.action.tasks.build" ] },
    { "before": [ "è" ], "commands": [ "workbench.action.debug.start" ] },
    { "before": [ "È" ], "commands": [ "workbench.action.debug.selectandstart" ] },
    { "before": [ "+" ], "commands": [ "search.action.focusNextSearchResult" ] },
    { "before": [ "-" ], "commands": [ "search.action.focusPreviousSearchResult" ] },
    { "before": [ "<CR>" ], "commands": [ "editor.action.quickFix" ] },
    { "before": [ "ç" ], "after": [ "*", "N", "c", "g", "n" ] },
    { "before": [ "g", "r" ], "after": [ "g", "d" ] },
    { "before": [ "g", "c", "c" ], "commands": [ "editor.action.commentLine" ] },
    { "before": [ "c", "s", "t" ], "commands": [ "editor.emmet.action.updateTag" ] },

    // Correction
    { "before": [ "g", "%" ], "commands": [ "editor.emmet.action.matchTag" ] },
    { "before": [ "_" ], "after": [ "$", "v", "a", "f", "V" ] },

    // Git
    { "before": [ "\\", "d" ], "commands":[{"command":"workbench.action.tasks.runTask","args":"difftool"}] },
    { "before": [ "\\", "D" ], "commands":[{"command":"workbench.action.tasks.runTask","args":"tig-status"}] },
    { "before": [ "\\", "l" ], "commands":[{"command":"workbench.action.tasks.runTask","args":"tig-file"}] },
    { "before": [ "\\", "L" ], "commands":[{"command":"workbench.action.tasks.runTask","args":"tig"}] },
    { "before": [ "\\", "b" ], "commands":[{"command":"workbench.action.tasks.runTask","args":"tig-blame"}] },

    // Debug
    { "before": [ "<Up>" ], "commands": [ "workbench.action.debug.continue" ] },
    { "before": [ "<Right>" ], "commands": [ "workbench.action.debug.stepInto" ] },
    { "before": [ "<Left>" ], "commands": [ "workbench.action.debug.stepOut" ] },
    { "before": [ "<Down>" ], "commands": [ "workbench.action.debug.stepOver" ] },
    { "before": [ " ", "j" ], "commands": [ "workbench.action.debug.callStackDown" ] },
    { "before": [ " ", "k" ], "commands": [ "workbench.action.debug.callStackUp" ] },
    { "before": [ " ", "a" ], "commands": [ "workbench.action.debug.callStackTop" ] },
    { "before": [ " ", "c" ], "commands": [ "editor.debug.action.runToCursor" ] },
    { "before": [ " ", "p" ], "commands": [ "workbench.action.debug.pause" ] },
    { "before": [ " ", "x" ], "commands": [ "workbench.action.debug.stop" ] },
    { "before": [ " ", "b" ], "commands": [ "editor.debug.action.toggleBreakpoint" ] },
    { "before": [ " ", "B" ], "commands": [ "workbench.debug.breakPointsView.toggleVisibility" ] },
    { "before": [ " ", "m" ], "commands": [ "workbench.debug.viewlet.action.toggleBreakpointsActivatedAction" ] },
    { "before": [ " ", "w" ], "commands": [ "editor.debug.action.selectionToWatch" ] },
    { "before": [ " ", "W" ], "commands": [ "workbench.debug.viewlet.action.removeAllWatchExpressions" ] },
  ],
}
