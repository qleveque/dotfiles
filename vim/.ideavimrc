source ~/dotfiles/vim/.vimrc
sethandler n:vim i:ide
set ideajoin

nnoremap <C-h> <C-W>h
nnoremap <C-j> <C-W>j
nnoremap <C-k> <C-W>k
nnoremap <C-l> <C-W>l

nnoremap <C-t> :action GotoFile<CR>
nnoremap <C-n> :action GotoSymbol<CR>
nnoremap <C-s> :action FindInPath<CR>
nnoremap <C-f> :action ActivateProjectToolWindow<CR>
nnoremap <C-p> :action RecentFiles<CR>
nnoremap <C-q> :action CloseAllEditors<CR>

nnoremap \b :action Annotate<CR>
nnoremap \d :action Compare.LastVersion<CR>
nnoremap \D :action Vcs.Show.Local.Changes<CR>
nnoremap \l :action Vcs.ShowTabbedFileHistory<CR>
nnoremap \L :action Vcs.Show.Log<CR>

nmap é :action Run<CR>
nmap É :action ChooseRunConfiguration<CR>
nmap è :action Debug<CR>
nmap È :action ChooseDebugConfiguration<CR>

nnoremap ( :action PreviousTab<CR>
nnoremap ) :action NextTab<CR>
nnoremap _ :q<CR>

nnoremap + :action NextDiff<CR>
nnoremap - :action PreviousDiff<CR>

nnoremap gd gd
nnoremap gr :action GotoDeclaration<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gs :action GotoSuperMethod<CR>
map L /\V\C\\<
map H ?\V\C\\<

vnoremap \f :action ShowReformatFileDialog<CR>
nnoremap \i :action OptimizeImports<CR>
nnoremap \r :action RenameElement<CR>
nnoremap \t :action FileStructurePopup<CR>
nnoremap \o :action OverrideMethods<CR>
nnoremap \p :action ParameterInfo<CR>
nnoremap \h :action TypeHierarchy<CR>

nmap ℝ :action Resume<CR>
nmap Ⅰ :action StepInto<CR>
nmap œ :action StepOut<CR>
nmap € :action StepOver<CR>
nmap © :action RunToCursor<CR>
nmap × :action Stop<CR>
nmap ñ :action NextOccurence<CR>
nmap ¶ :action PreviousOccurence<CR>
nmap æ :action ShowExecutionPoint<CR>
nmap ß :action ToggleLineBreakpoint<CR>
nmap ω :action Debugger.AddToWatch<CR>
vmap ω :action Debugger.AddToWatch<CR>
nmap Β :action ViewBreakpoints<CR>
nmap … :action XDebugger.MuteBreakpoints<CR>
nmap α :action Pause<CR>
