" Miscellaneous
set vicmd=$EDITOR
set syscalls
set trash
set history=100
set nofollowlinks
set sortnumbers
set undolevels=100
set novimhelp
set norunexec
set timefmt=%m/%d\ %H:%M
set wildmenu
set wildstyle=popup
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set ignorecase
set smartcase
set nohlsearch
set incsearch
set scrolloff=4
set statusline="  %A %10u:%-7g %15s %20d  "
set vifminfo=dhistory,savedirs,chistory,state,tui,shistory,
    \phistory,fhistory,dirstack,registers,bookmarks,bmarks

if !has('win')
    set slowfs=curlftpfs
endif
set ls!

set syncregs=general
set confirm-=delete

" Shortcuts
nnoremap w :view<CR>
vnoremap w :view<CR>gv
nnoremap yp :execute '!echo -n %d | xclip -i -sel p -f | xclip -i -sel c'<CR>
nnoremap yW :execute '!echo -n %c:p | xclip -i -sel p -f | xclip -i -sel c'<CR>
nnoremap yw :execute '!echo -n %c | xclip -i -sel p -f | xclip -i -sel c'<CR>
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw
nnoremap zc zm
nnoremap V ggvG
nnoremap s :sort<CR>
map <C-i> :histnext<CR>

" FZF
command! Cd :execute 'cd "./'.system('eval $FZF_ALT_C_COMMAND | fzf 2>/dev/tty').'"' | :redraw
nnoremap <M-c> :Cd<CR>
command! Files :execute 'mark x '.system('a=$(eval $FZF_CTRL_T_COMMAND | fzf 2>/dev/tty) && echo \"%d/$a:h\" \"$a:t\"') | :redraw | :normal 'x
nnoremap <C-t> :Files<CR>
command! GoDirs :execute 'cd "'.system('eval $FZF_P_COMMAND | fzf --exact 2>/dev/tty').'"' | :redraw
nnoremap <M-p> :GoDirs<CR>
command! Dirs :execute 'mark x '.system('a=$(eval $FZF_P_COMMAND | fzf --exact 2>/dev/tty) && echo \"$a:h\" \"$a:t\"') | :redraw | :normal 'x
nnoremap <C-p> :Dirs<CR>

" Quit
command! q :execute 'winc t' | quit
nnoremap <C-q> :q<CR>

" Open
nnoremap <CR> :!/bin/zsh -i -c "o %f"<CR>
nnoremap i <Esc>

" Tmux integration
nnoremap <C-b>s :!tmux split-window -v -c %d<CR>
nnoremap <C-b>v :!tmux split-window -h -c %d<CR>

" Icons
source ~/.vifm/vifm_devicons/favicons.vifm

" Commands
command! unzip :!zsh -ic unzip "%f"
command! g :execute 'cd "'.system('set %a && eval $JUMP_TARGET').'"'
command! o :!/bin/zsh -i -c "o %a"

" Colors
highlight clear
highlight Win cterm=none ctermfg=default ctermbg=default
highlight Directory cterm=bold ctermfg=green ctermbg=default
highlight Link cterm=bold ctermfg=yellow ctermbg=default
highlight BrokenLink cterm=bold ctermfg=red ctermbg=default
highlight Socket cterm=bold ctermfg=magenta ctermbg=default
highlight Device cterm=bold ctermfg=red ctermbg=default
highlight Fifo cterm=bold ctermfg=green ctermbg=default
highlight Executable cterm=none ctermfg=default ctermbg=default
highlight Selected cterm=bold ctermfg=magenta ctermbg=default
highlight StatusLine cterm=none ctermfg=default ctermbg=default
highlight WildMenu cterm=underline,reverse ctermfg=default ctermbg=default
highlight CmdLine cterm=none ctermfg=default ctermbg=default
highlight ErrorMsg cterm=none ctermfg=red ctermbg=default
highlight Border cterm=none ctermfg=black ctermbg=default
highlight JobLine cterm=bold,reverse ctermfg=default ctermbg=default
highlight SuggestBox cterm=bold ctermfg=default ctermbg=default
highlight CmpMismatch cterm=bold ctermfg=default ctermbg=red
highlight AuxWin cterm=underline,bold,reverse,standout ctermfg=default ctermbg=default
highlight CurrLine cterm=none,reverse ctermbg=black
highlight TopLine cterm=none ctermfg=default ctermbg=default
highlight TopLineSel cterm=none ctermfg=default ctermbg=default
