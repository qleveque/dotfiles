" Miscellaneous
colorscheme Default
set vicmd=$EDITOR
set syscalls
set trash
set history=100
set nofollowlinks
set sortnumbers
set undolevels=100
set novimhelp
set norunexec
set timefmt=%m/%d\ %H:%M
set wildmenu
set wildstyle=popup
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set ignorecase
set smartcase
set nohlsearch
set incsearch
set scrolloff=4
set statusline="  %A %10u:%-7g %15s %20d  "
set vifminfo=dhistory,savedirs,chistory,state,tui,shistory,
    \phistory,fhistory,dirstack,registers,bookmarks,bmarks

if !has('win')
    set slowfs=curlftpfs
endif
set ls!

set syncregs=general
set confirm-=delete

" Shortcuts
nnoremap w :view<cr>
vnoremap w :view<cr>gv
nnoremap yp :execute '!echo -n %d | xclip -i -sel p -f | xclip -i -sel c'<cr>
nnoremap yW :execute '!echo -n %c:p | xclip -i -sel p -f | xclip -i -sel c'<cr>
nnoremap yw :execute '!echo -n %c | xclip -i -sel p -f | xclip -i -sel c'<cr>
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw
nnoremap zc zm

" FZF
command! Cd :execute 'cd "./'.system('eval $FZF_ALT_C_COMMAND | fzf 2>/dev/tty').'"' | :redraw
nnoremap <C-t> :Cd<cr>
command! Dirs :execute 'cd "'.system('eval $FZF_CTRL_P_COMMAND | fzf --no-sort 2>/dev/tty').'"' | :redraw
nnoremap <C-p> :Dirs<cr>
command! Files :execute 'mark x  '.system('a=$(eval $FZF_CTRL_T_COMMAND | fzf 2>/dev/tty) && echo \"%d/$a:h\" \"$a:t\"') | :redraw | :normal 'x
nnoremap <C-n> :Files<cr>

" Quit
command! q :execute 'winc t' | quit
nnoremap <C-q> :q<CR>

" Open
nnoremap <CR> :!/bin/zsh -i -c "open %f"<CR>

" Tmux integration
nnoremap <C-b>s :!tmux split-window -v -c %d<CR>
nnoremap <C-b>v :!tmux split-window -h -c %d<CR>

" Icons
source ~/.vifm/vifm_devicons/favicons.vifm

" Commands
command! unzip :!zsh -ic '{unzip "%f"} always {read _\?[Done...]}'
command! c :execute 'cd "'.system('set %a && echo $(eval $PYQO_D_TARGET)').'"'
command! f :execute 'mark x '.system('set %a && a=$(eval $PYQO_F_TARGET) && echo \"$a:h\" \"$a:t\"') | :redraw | :normal 'x
