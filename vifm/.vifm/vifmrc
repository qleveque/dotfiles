" Miscellaneous
colorscheme Default
set vicmd=nvim
set syscalls
set trash
set history=100
set nofollowlinks
set sortnumbers
set undolevels=100
set novimhelp
set norunexec
set timefmt=%m/%d\ %H:%M
set wildmenu
set wildstyle=popup
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set ignorecase
set smartcase
set nohlsearch
set incsearch
set scrolloff=4
set statusline="  %A %10u:%-7g %15s %20d  "
set vifminfo=dhistory,savedirs,chistory,state,tui,shistory,
    \phistory,fhistory,dirstack,registers,bookmarks,bmarks

if !has('win')
    set slowfs=curlftpfs
endif
set ls!

set syncregs=general
set confirm-=delete

" Shortcuts
nnoremap w :view<cr>
vnoremap w :view<cr>gv
nnoremap yp :execute '!echo -n %d | xclip -i -sel p -f | xclip -i -sel c'<cr>
nnoremap yF :execute '!echo -n %c:p | xclip -i -sel p -f | xclip -i -sel c'<cr>
nnoremap yf :execute '!echo -n %c | xclip -i -sel p -f | xclip -i -sel c'<cr>
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw
nnoremap zc zm

" Pyqo
command! c :execute 'cd "'.system('d %a -e').'"'
command! f :execute 'mark x "'.system('f %a -e | sed "s/\(.*\/\)\?\(.*\)/\1\" \"\2/"').'"' | :redraw | :normal 'x

" FZF
command! Files :execute 'mark x "%d/'.system('eval $FZF_CTRL_T_COMMAND | fzf 2>/dev/tty | sed "s/\(.*\/\)\?\(.*\)/\1\" \"\2/"').'"' | :redraw | :normal 'x
command! Cd :execute 'cd "./'.system('eval $FZF_ALT_C_COMMAND | fzf 2>/dev/tty').'"' | :redraw
command! Dirs :execute 'cd "'.system('eval $FZF_ALT_P_COMMAND | fzf --no-sort 2>/dev/tty').'"' | :redraw
nnoremap <C-t> :Files<cr>
nnoremap <A-c> :Cd<cr>
nnoremap <A-p> :Dirs<cr>

" Quit
command! q :execute 'winc t' | quit
nnoremap <C-q> :q<CR>

" Open
nnoremap <CR> :!/bin/zsh -i -c "open %f"<CR>

" Tmux integration
nnoremap <C-b>s :!tmux split-window -v -c %d<CR>
nnoremap <C-b>v :!tmux split-window -h -c %d<CR>

" Icons
source ~/.vifm/vifm_devicons/favicons.vifm

" Decompression
command! unzip :!unzip %f
command! gunzip :!gunzip %f
command! tar :!tar -xvf %f
